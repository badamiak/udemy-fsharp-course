{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "fsi",
    "isShellCommand": true,
    "args": [],
    "tasks": [
        {
            "taskName": "build",
            "args": [ "${file}" ],
            "isBuildCommand": true,
            "showOutput": "silent",
            "problemMatcher": "$msCompile"
        },
        {
            "taskName": "restore",
            "command": "nuget",
            "args": [ "restore", "-PackagesDirectory", "packages" ],
            "isBuildCommand": false,
            "showOutput": "silent",
            "problemMatcher": "$msCompile"
        }
    ]
}